{
  "name": "weather-app",
  "version": "1.0.0",
  "description": "weather app",
  "main": "index.js",
  "author": "pavlos papadopoulos",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf *.css,*.js",
    "css-concat": "concat -o concat.css src/css/normalize.css src/css/main.css",
    "css-compress": "postcss concat.css > dist/css/style.css",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "lint": "jshint src/js",
    "js": "concat -o concat.js src/js/plugins.js src/js/main.js",
    "browserify": "mkdirp dist/js && browserify concat.js | uglifyjs -mc > dist/js/bundle.js",
    "serve": "browser-sync start --server --files \"dist/css/*.css,dist/js/*.js,**/*.html,!node_modules/**/*.html\"",
    "build:css": "run-s css-concat css-compress autoprefixer",
    "build:js": "run-s lint js browserify",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/css/*.css\" -- run-s build:css",
    "watch:js": "onchange \"src/js/*.js\" -- run-s build:js",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "concat": "^1.0.3",
    "cssnano": "^3.10.0",
    "jshint": "^2.9.5",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.0",
    "requirejs": "^2.3.4",
    "rimraf": "^2.6.1",
    "uglify-js": "^3.0.26"
  }
}
